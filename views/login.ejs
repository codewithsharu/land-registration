<div class="login-container" style="max-width: 400px; margin: 0 auto; margin-bottom: 100px; padding: 30px; border: 1px solid #ddd; border-radius: 12px; background-color: #ffffff; box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2); display: flex; flex-direction: column; align-items: center;">
    <h1 style="text-align: center; color: #007bff; font-family: 'Arial', sans-serif; font-size: 2em; margin-bottom: 20px;">Login to Land Marketplace</h1>
    
    <% if (typeof error !== 'undefined') { %>
        <div style="color: red; margin-bottom: 1em; text-align: center; font-weight: bold;">
            <%= error %>
        </div>
    <% } %>
    
    <form action="/login" method="POST" style="display: flex; flex-direction: column; gap: 1.5em; width: 100%;">
        <input type="email" name="email" placeholder="Email" required style="padding: 12px; border: 1px solid #ccc; border-radius: 8px; font-size: 1em; transition: border-color 0.3s; outline: none;" onfocus="this.style.borderColor='#007bff';">
        <input type="password" name="password" placeholder="Password" required style="padding: 12px; border: 1px solid #ccc; border-radius: 8px; font-size: 1em; transition: border-color 0.3s; outline: none;" onfocus="this.style.borderColor='#007bff';">
        <button type="submit" class="btn" style="background-color: #007bff; color: white; border: none; border-radius: 8px; padding: 12px; cursor: pointer; font-size: 1em; transition: background-color 0.3s, transform 0.2s;" onmouseover="this.style.transform='scale(1.05)';" onmouseout="this.style.transform='scale(1)';">Login</button>
    </form>

    <p style="text-align: center; font-size: 0.9em;">Don't have an account? <a href="/register" style="color: #007bff; text-decoration: underline; font-weight: bold;">Register here</a></p>
</div>

